{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":pinAllExceptPeerDependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "postUpdateOptions": [
    "pnpmDedupe"
  ],
  "packageRules": [
    {
      "groupName": "astro-js",
      "matchPackagePrefixes": [
        "@astrojs/",
        "astro"
      ]
    },
    {
      "groupName": "release-it",
      "matchPackagePrefixes": [
        "@release-it/",
        "release-it"
      ]
    },
    {
      "groupName": "iconify",
      "matchPackagePrefixes": [
        "@iconify-json/"
      ]
    },
    {
      "groupName": "fontsource",
      "matchPackagePrefixes": [
        "@fontsource/"
      ]
    },
    {
      "matchFileNames": [
        ".tool-versions",
        ".github/**"
      ],
      "groupName": "toolchain",
      "schedule": "before 6am on Friday"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "automerge": true
  }
}