{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "postUpdateOptions": [
    "pnpmDedupe"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        ".github/**"
      ],
      "groupName": "github-action",
      "schedule": "before 6am on Friday"
    },
    {
      "matchFileNames": [
        ".tool-versions"
      ],
      "groupName": "toolchain",
      "schedule": "before 6am on Friday"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "automerge": true
  }
}