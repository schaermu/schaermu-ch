---
export interface Props {
    title: string;
    role: string;
}

const { title, role } = Astro.props;
---

<div class="flex gap-3">
    <h3 class="text-lg flex-auto font-semibold text-slate-900 dark:text-white">
        {title}
    </h3>
    <small class="self-end text-slate-400 dark:text-slate-500">{role}</small>
</div>
