---
import { Image } from "astro:assets";

interface Props {
    src: string;
    alt: string;
    width: number;
    caption: string;
}

const { src, alt, width, caption } = Astro.props;
---

<figure class="flex flex-col place-items-center">
    <Image src={src} alt={alt} inferSize width={width} />
    {caption && <figcaption>{caption}</figcaption>}
</figure>
