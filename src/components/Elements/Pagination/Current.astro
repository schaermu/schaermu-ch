---
export type Props = {
    pageNumber: number;
};

const { pageNumber } = Astro.props;
---

<span
    aria-current="page"
    aria-label={`Current page, page ${pageNumber}`}
    class="unset relative block rounded bg-primary-blue px-3 py-1.5 text-sm text-neutral-600 transition-all duration-300 dark:text-white"
>
    {pageNumber}
</span>
