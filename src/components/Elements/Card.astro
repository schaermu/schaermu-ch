---
import { Image } from "astro:assets";

export interface Props {
    image?: {
        src: ImageMetadata;
        alt: string;
        width: number;
    };
    href?: string;
    classList?: string[];
}

const { image, href, classList = [] } = Astro.props;
---

<div
    class:list={[
        "flex flex-col bg-white border shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700 dark:shadow-slate-700/[.7]",
        ...classList,
    ]}
>
    {
        image && (
            <Image
                class="w-full h-auto rounded-t-xl"
                src={image.src}
                alt={image.alt}
                width={image.width}
            />
        )
    }
    <div class="p-4 md:p-5">
        <h3 class="text-lg font-bold text-gray-800 dark:text-white">
            <slot name="title" />
        </h3>
        <p class="mt-1 text-gray-800 dark:text-gray-400">
            <slot name="text" />
        </p>
        {
            href && (
                <a class="mt-3 inline-flex items-center gap-2 mt-5 text-sm font-medium text-blue-500 hover:text-blue-700" href={href}>
                    <slot name="link" />
                </a>
            )
        }
    </div>
</div>
