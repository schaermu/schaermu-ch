---
import TagItem from "@components/Blog/TagItem.astro";

export interface Props {
    tags: string[];
}

const { tags } = Astro.props;
---

<div class="not-prose my-5 flex flex-wrap gap-1">
    {
        tags.map((tag: string) => (
            <TagItem label={tag} href={`/blog/tags/${tag}`} />
        ))
    }
</div>
